{
  "manifest_version": 2,
  "name": "FlowSpy",
  "description": "Subscribe to threads and custom patterns in flowdock messages.",
  "version": "0.3.2",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": ["scripts/requirejs-2.3.2/require.js", "scripts/background.js"]
  },
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.flowdock.com/app/*"],
      "css": ["css/flowdock.css"],
      "js": ["scripts/jquery-3.1.1/jquery.js", "scripts/flowdock.js"]
    }
  ],
  "permissions": [
    "https://api.flowdock.com/",
    "https://www.flowdock.com/",
    "background",
    "identity",
    "notifications",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "images/*"
  ]
}
